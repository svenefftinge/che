.github-repository-item
  md-item.che-list-item
    border none

  md-item-content
    display block
    border none

    .che-list-item-row
      line-height 47px
      height 47px

      .che-list-item-checkbox-main
        padding-left 19px
        padding-bottom 3px

.github-repository-item

  position relative
  background-color $che-white-color
  border 1px solid lighten($very-light-grey-color, 4%)
  z-index 0

  *
    outline none

  &:not(:first-of-type)
    margin-top -1px

  .github-repository-item-checkbox
    width 55px

  .github-repository-item-name,
  .github-repository-item-icons
    color $label-primary-color

  .github-repository-item-name,
  .github-repository-item-details
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
    max-width 100%

  .github-repository-item-icon
    min-width 16px
    overflow visible
    white-space nowrap

  .github-repository-item-icon,
  .github-repository-item-details
    padding-left 8px
