.template-selector-item
  md-item.che-list-item
    border none

  md-item-content
    display block
    border none

    .che-list-item-row
      line-height 47px
      height 47px

.template-selector-item

  position relative
  background-color $che-white-color
  border 1px solid lighten($very-light-grey-color, 4%)
  z-index 0

  *
    outline none

  &:not(:first-of-type)
    margin-top -1px

  .template-selector-item-checkbox
    width 100px

template-selector-item:not(:first-child) .template-selector-item
  border-top none
