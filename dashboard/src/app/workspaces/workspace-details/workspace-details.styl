.workspace-details-toolbar
  .workspace-status
    display inline
    font-size 19px
    margin-left 20px
    .fa-circle
      text-shadow none
  span.workspace-status-text
    color $menu-bg-color !important
    position relative
    bottom 2px
    font-size 13px
  che-button-default a
    background-color #00c183 !important

.workspace-details-content
  md-tab-content
    padding 0

  .config-import .config-editor
    margin-top 7px

    .CodeMirror
      height: 500px

  .workspace-details-tab-content

    .workspace-details-description
      color $disabled-color

    button
      margin 0 30px 0 0

    .workspace-status-indicator .fa-circle
      font-size 19px

    che-filter-selector
      line-height 33px;

    .namespace-toggle-button button
      margin 0 10px 10px 0

    .namespace-button button
      text-transform none !important

    .namespace-additional-info
      color $label-secondary-color
      margin-left 10px

    .empty-namespace-label
      color $warning-color
      margin-bottom 10px

      i
        margin-right 10px
        font-size 16pt

    span.workspace-status-text
      color lighten($che-ide-background-color, 40%) !important
      margin-bottom 4px
      margin-left 10px

    .workspace-restart-message
      color $disabled-color
      margin-top 15px

    .workspace-details-delete-label label
      color $che-delete-label-color

    .che-label-container-content

      .workspace-details-input
        margin -6px 0

      .workspace-details-action-buttons
        margin-top 20px
