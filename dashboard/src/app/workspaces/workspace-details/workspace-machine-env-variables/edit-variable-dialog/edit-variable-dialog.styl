.edit-env-variable-dialog-content
  margin-top 15px
  width 550px
  .che-input-box label
    color $label-secondary-color !important
    font-weight 700 !important
    letter-spacing 1.3px
  .che-label-container div.che-label-container-label, .che-input-box label
    min-width 100px
    max-width 100px
    width 100px
  .che-label-container
    margin 0
    min-height 40px
    border-bottom none
    .che-label-container-label-name
      line-height 68px
    & + div
      margin-top 20px
    div.che-input-desktop-value-column
      min-width 100%
      .fa-pencil:before
        position relative
        top 5px
  .che-label-container
    padding 0
    .che-input-desktop
     margin 0
    textarea
     height 70px
     max-height 70px
     width 100%
     max-width 550px
     padding 5px 14px 5px 14px
  .edit-variable-dialog-textarea
    margin 0
